{
	"name": "content-reviewer-monorepo",
	"private": true,
	"scripts": {
		"lint": "pnpm -r run lint",
		"typecheck": "pnpm -r run typecheck",
		"build": "pnpm -r run build",
		"test": "pnpm -r run test",
		"e2e": "pnpm --filter content-reviewer exec playwright test",
		"verify": "pnpm lint && pnpm --filter content-reviewer prisma:generate && pnpm typecheck && pnpm build && pnpm test"
	},
	"packageManager": "pnpm@9.15.4"
}
